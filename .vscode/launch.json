{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
        },
        {
            "name": "code2md",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/bin/code2md.ts",
                "${workspaceFolder}/src/02_parsing_intro.ts",
                "${workspaceFolder}/docs"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test_tokenizer.js",
            "program": "${workspaceFolder}/src/test_tokenizer.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "tree.js",
            "program": "${workspaceFolder}/src/tree.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "fold.js",
            "program": "${workspaceFolder}/src/fold.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "A Single Mocha test",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/mocha.spec.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
              "--no-timeouts",
              "--colors",
              "**/${fileBasenameNoExtension}.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "openDebug": "openOnDebugBreak",
            "sourceMaps": true,
            "outFiles": [
              "${workspaceFolder}/lib/**/*.js"
            ]
          },
          {
            "name": "Run Mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--require",
                "ts-node/register",
                "${workspaceRoot}/test/mocha.spec.ts"
            ],
            "cwd": "${workspaceRoot}",
        }
        
    ]
}